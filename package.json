{
  "name": "2cmind",
  "version": "0.1.0",
  "description": "Main repository of the 2cmind project",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brucegroverlee/2cmind.git"
  },
  "keywords": [
    "2cmind",
    "daemon",
    "lizard"
  ],
  "author": "Bruce Grover Lee <brucegrover.lee@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/brucegroverlee/2cmind/issues"
  },
  "homepage": "https://github.com/brucegroverlee/2cmind#readme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-html": "cp src/frontend/index.html public/index.html",
    "build-css": "cp src/frontend/index.css public/bundle.css",
    "build-js": "browserify -t [ babelify --presets [ es2015 ] ] src/frontend/index.js > public/bundle.js",
    "build-frontend": "npm run copy-html && npm run build-css && npm run build-js",
    "engine": "babel-node src/backend/index.js --presets es2015",
    "start": "npm run build-frontend && npm run engine"
  },
  "dependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "express": "^4.13.3",
    "jquery": "^2.1.4"
  },
  "devDependencies": {
    "babelify": "^7.2.0",
    "browserify": "^12.0.1"
  }
}
